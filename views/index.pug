doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(href="style.css", rel="stylesheet")
    != components['oc-client']
    title= title
  body
    header
      != components['oc-columbus-header']
    p
      != components['oc-apod']
    p
      != components['oc-my-next-run']
    footer
      div
        a(href="https://twitter.com/mattiaerre" target="_blank") @mattiaerre
      div.what-did-you-do
        span What did you do
        span
          != components['oc-timeago']
        span today?
      div= timezoneOffset
      div= title
